# ============================================
# PROJECT CONFIGURATION
# ============================================
PROJECT_NAME=FastAPI Celery Next.js Demo
ENVIRONMENT=development

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ============================================
# BACKEND API CONFIGURATION
# ============================================
# Comma-separated list of allowed CORS origins
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Job limits
MAX_JOB_N=1000000
MAX_CHUNKS=100

# Logging
LOG_LEVEL=info

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# API URL for frontend (must have NEXT_PUBLIC_ prefix)
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================
# SUPABASE CONFIGURATION (Optional)
# ============================================
# Get these from your Supabase project settings
# If not provided, app runs without authentication
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Frontend Supabase config (must have NEXT_PUBLIC_ prefix)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================
# CELERY CONFIGURATION
# ============================================
CELERY_QUEUE=celery
CELERY_TASK_ALWAYS_EAGER=false

# ============================================
# MONITORING & METRICS
# ============================================
# Enable Prometheus metrics endpoint
ENABLE_METRICS=true

# ============================================
# RATE LIMITING
# ============================================
# Rate limits are defined in code but can be overridden here
# Format: requests/time_window (e.g., "10/minute", "100/hour")
RATE_LIMIT_AUTHENTICATED=10/minute
RATE_LIMIT_DEMO=5/minute
